{
  "root": true,
  "plugins": [
    "@stylistic"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@stylistic/recommended-extends"
  ],
  "rules": {
    "@stylistic/eol-last": [
      "error",
      "always"
    ],
    "@stylistic/arrow-parens": [
      "error",
      "always"
    ],
    "@stylistic/object-property-newline": [
      "error",
      {
        "allowAllPropertiesOnSameLine": true
      }
    ],
    "@stylistic/brace-style": [
      "error",
      "1tbs"
    ],
    "@stylistic/semi": [
      "error",
      "always"
    ]
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "env": {
    "browser": true
  }
}